Процедура Сформировать()
	
	Док = СоздатьОбъект("Документ.Списание");
	
	Если Док.НайтиДокумент(ВыбСписание) = 1 Тогда
	
		Док.Комментарий = ВыбКоммент;
		
		Попытка
			
			Док.Записать();
			
		Исключение
			
			Сообщить("Не удалось записать документ """ 
				+ ВыбСписание + """", "!");
				
			Сообщить(ОписаниеОшибки(), "!");
			
		КонецПопытки;	
		
	КонецЕсли;	
	
КонецПроцедуры
